<!-- for Twitter -->
<meta name="twitter:card" content="summary">
<meta name="twitter:site" content="<%= Social.get_twitter_id %>"> 
<!-- for Facebook --> 
<meta property="og:type" content="website" />
<%= tag :meta, :property => "og:image", :content => share_icon %>
<meta property="og:title" content="<%= Social.get_title %>" />
<meta property="og:description" content="<%= Social.get_description %>" />
<meta property="og:url" content="<%= site_url %>" />