<div ng-controller="SignUpCtrl" class="sign-up">
  
  <div class="page-title">
    <h2 sticky-element sticky-top="46" sticky-index="2000">Hello,</h2>
  </div>
  <h3 class="gamma">please sign up here.</h3>

  <form name="form" novalidate class="sign-up">
    <label for="uEmail">Email:</label><input type="email" ng-model="user.email" name="uEmail" required /><br />
    <label for="pw1">Password:</label><input type="password" id="pw1" name="pw1" ng-model="pw1" required ><br />
    <label for="pw2">Confirm Password:</label><input type="password" id="pw2" name="pw2" ng-model="pw2" ng-required="" pw-check="pw1" /><br />

    <div ng-show="form.uEmail.$dirty && form.uEmail.$invalid">Invalid:
      <span ng-show="form.uEmail.$error.required">Email Required.</span>
      <span ng-show="form.uEmail.$error.email">This is not a valid email.</span>
    </div>

    <div ng-show="form.$error">
      <span ng-show="form.pw2.$error.pwmatch" class="msg-error">Passwords don't match.</span> 
    </div>

    <button ng-click="signup(user)"
            ng-disabled="form.$invalid || isUnchanged(user)" >Sign Up</button>

  </form>
<!--
  <div>
    <pre>form = {{user | json}}</pre>
  </div>
-->
  <style type="text/css">
    .sign-up input.ng-invalid.ng-dirty {
      background-color: #FA787E;
    }

    .sign-up input.ng-valid.ng-dirty{
      background-color: #78FA89;
    }
  </style>
</div>