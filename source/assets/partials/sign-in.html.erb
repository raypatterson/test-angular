<div ng-controller="SignCtrl" class="sign-in">
  
  <div class="page-title">
    <h2 sticky-element sticky-top="46" sticky-index="2000">Hello,</h2>
  </div>
  <h3 class="gamma">please sign in here.</h3>

  <form name="form" novalidate class="sign-in">
    <label>Email:</label><input type="email" ng-model="user.email" name="uEmail" required /><br />
    <label>Password:</lable><input type="password" ng-model="user.password" name="uPassword" required /><br />

    <div ng-show="form.uEmail.$dirty && form.uEmail.$invalid">Invalid:
      <span ng-show="form.uEmail.$error.required">Email Required.</span>
      <span ng-show="form.uEmail.$error.email">This is not a valid email.</span>


    </div>

    <button ng-click="signin(user)"
            ng-disabled="form.$invalid || isUnchanged(user)">Sign In</button>

  </form>
<!--
  <div>
    <pre>form = {{user | json}}</pre>
  </div>
-->
  <style type="text/css">
    .sign-in input.ng-invalid.ng-dirty {
      background-color: #FA787E;
    }

    .sign-in input.ng-valid.ng-dirty{
      background-color: #78FA89;
    }
  </style>
</div>